{
  "sensors": {
    "mock": {
      "sensor_count": 5,
      "temperature": 25.0,
      "humidity": 62.0,
      "interval": 60
    },
    "ash2200": {
      "ids": "",
      "device": "/dev/ttyUSB0",
      "baudrate": "9600",
      "timeout": 200
    }
  },
  "utilities": {
    "logging": {
      "level": "info",
      "format": "[%(class)s] %(asctime)s %(levelname)s: %(message)s",
      "dateformat": "%Y/%m/%d %H:%M:%S",
      "handlers": {
        "streamhandler": {
          "enabled": true
        },
        "graylog": {
          "enabled": false,
          "type": "tcp",
          "host": "192.168.178.25",
          "port": 12202
        }
      }
    },
    "local": {
      "label": "local-container",
      "image": "r3r57/montreal:latest-arm",
      "network_name": "nsq-net",
      "device": "/dev/ttyUSB0",
      "environment": {
        "SERVICE": "sensor",
        "TYPE": "ash2200"
      }
    },
    "metadata": {
      "local_configuration": "/etc/local_configuration.json"
    },
    "sensorlist": {
      "interval": 300
    }
  },
  "interfaces": {
    "nsq": {
      "nsqd": {
        "ip": "nsqd",
        "port": "4151",
        "timeout": 60
      },
      "nsqlookupd": {
        "ip": "nsqlookupd",
        "port": "4161",
        "interval": 30,
        "timeout": 60
      },
      "topics": {
        "data_topic": "sensor_data"
      },
      "connection":{
        "timeout": 2,
        "max_tries": 10
      }
    },
    "memcached": {
      "ip": "memcached",
      "port": 11211,
      "connect_timeout": 180,
      "timeout": 180,
      "key_expiration": 600,
      "noreply_flag": true
    },
    "influxdb": {
      "ip": "influxdb",
      "port": 8086,
      "user": "root",
      "password": "root",
      "database": "montreal",
      "measurements": "Temperature & Humidity"
    }
  }
}
